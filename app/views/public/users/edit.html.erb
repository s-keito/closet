<%= form_with model:@user,local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control user_name' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control user_introduction' %>
  </div>

  <button type="button" class="btn btn-success">season</button><br>
  <button type="button" class="btn btn-success">category</button>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
