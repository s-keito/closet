<%= form_with model: @dress, url: dress_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: 'form-control dress_caption' %>
  </div>

<div class="form-group">
 <%= f.select :season, Dress.seasons.keys %>
</div>
