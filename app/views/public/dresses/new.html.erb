<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">

<%= form_with model: @dress, url: dresses_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: 'form-control dress_caption' %>
  </div>

  <div class="form-group">
  <%= f.label :category, "category" %>
   <%= f.select :category, Dress.categories.keys %>
  </div>

  <div class="form-group">
    <%= f.label :season_id, "season" %>
    <%= f.select :season_id, options_from_collection_for_select(Season.all, :id, :seasonal) %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

  </div>
    <div class="col-sm"></div>
  </div>
</div>
