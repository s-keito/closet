<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">

<%= form_with model: @dress, url: dresses_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: 'form-control dress_caption' %>
  </div>


 <%= f.select :season, [['all season',0.to_i], ['spring',1.to_i], ['summer',2.to_i], ['autumn',3.to_i], ['winter',4.to_i]] %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

  </div>
    <div class="col-sm"></div>
  </div>
</div>
